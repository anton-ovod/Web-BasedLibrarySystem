@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container-fluid d-flex align-items-center flex-wrap mt-2 mt-lg-0">
    <div class="container">
        <h1 class="display-5 fw-bold text-center mb-2 mb-lg-1">Book Details</h1>
            <form asp-action="Update" method="post" class="row m-0 p-3">
                <input asp-for="Id" type="hidden"/>
                <div class="col-12 col-md-6 d-flex pe-md-2 pe-lg-3 flex-column align-items-center mb-3 mb-md-0 px-0">
                        <img id="coverPreview"
                             src="@(Model.Cover != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.Cover)}" : "/images/BookCoverPlaceholder.jpg")"
                             alt="Book Cover"
                             class="img-fluid border mb-2"
                             style="max-height: 468px; width: 100%; object-fit: contain;"/>
                        <label for="newCover" class="form-label">Upload new cover:</label>
                        <input type="file" id="newCover" name="newCover" class="form-control" accept="image/*"/>
                    </div>

                <div class="col-12 col-md-6">
                    <div class="row mb-2 ">
                        <div class="col-12 px-0">
                            <label asp-for="Title" class="form-label">Title:</label>
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-12 px-0">
                            <label asp-for="Author" class="form-label">Author:</label>
                            <input asp-for="Author" class="form-control"/>
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-12 px-0">
                            <label asp-for="Description" class="form-label">Description:</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-12 px-0">
                            <label asp-for="Genres" class="form-label">Genres:</label>
                            <input asp-for="Genres" class="form-control"/>
                            <span asp-validation-for="Genres" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-6 ps-0">
                            <label asp-for="PagesNumber" class="form-label">Total pages:</label>
                            <input asp-for="PagesNumber" type="number" class="form-control"/>
                            <span asp-validation-for="PagesNumber" class="text-danger"></span>
                        </div>
                        <div class="col-6 pe-0">
                            <label asp-for="ReadPagesNumber" class="form-label">Read pages:</label>
                            <input asp-for="ReadPagesNumber" type="number" class="form-control"/>
                            <span asp-validation-for="ReadPagesNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="m-0 mb-2 mt-2 row p-0">
                    <div class="col-12 col-lg-6 mb-3 mb-lg-0 px-0 pe-md-2 pe-lg-3">
                        <button type="submit" class="btn btn-secondary w-100">Save Changes</button>
                    </div>
                    <div class="col-12 col-lg-6 mb-3 mb-lg-0 px-0">
                        <a asp-controller="Library" asp-action="Index" class="btn btn-outline-secondary w-100 text-center">
                            Back to Library
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

