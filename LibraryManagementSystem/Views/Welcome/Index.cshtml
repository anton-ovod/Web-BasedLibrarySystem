@{
    ViewData["Title"] = "Welcome Page";
}


<div class="container py-4">
    <div class="row flex-md-row-reverse align-items-center g-4 py-4">

        <div class="col-12 col-lg-6">
            <img src="~/images/LibraryInterior.png" class="d-block mx-auto img-fluid" alt="Library Interior" loading="lazy">
        </div>

        <div class="col-12 col-lg-6">
            <h1 class="display-2 fw-bold lh-1 text-center text-lg-start mb-3">WHIMSY LIBRARY</h1>
            <p class="lead text-center text-lg-start mb-4">
                <span class="fw-bold">Welcome to Whimsy Library</span>, a digital space where your reading journey comes to life.
                Organize your books into categories, just like a real bookshelf.
                Discover, track, and share your literary adventures today!
            </p>
            <form asp-controller="Auth" asp-action="LogIn" method="get" class="col-12 col-lg-6">
                <button type="submit" class="btn btn-primary btn-lg w-100">Enter the Library</button>
            </form>
        </div>
    </div>
</div>

